@model CRMConnect.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body>
    <div class="container mt-4">
        <h2 class="text-center text-danger">Delete Customer</h2>
        <p class="text-center">Are you sure you want to delete this customer?</p>

        <div class="card p-4">
            <h5>ID: @Model.Id</h5>
            <h5>Name: @Model.Name</h5>
            <h5>Email: @Model.Email</h5>
            <h5>Phone: @Model.Phone</h5>
            <h5>Address: @Model.Address</h5>
            <h5>Company: @Model.Company</h5>
        </div>

        <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.Id">
            <button type="submit" class="btn btn-danger mt-3">Confirm Delete</button>
            <a href="@Url.Action("Index", "Customer")" class="btn btn-secondary mt-3">Cancel</a>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
