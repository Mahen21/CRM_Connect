@model List<CRMConnect.Models.CustomerTask>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Task Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container mt-5">
        <h1>Customer Task Management</h1>

        <!-- Display error message if API call fails -->
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }

        <div class="mt-3">
            <a href="/customertasks/create" class="btn btn-primary">Create New Task</a>
        </div>

        <!-- Customer Task List -->
        <div class="mt-4">
            <h2>Customer Tasks</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Task ID</th>
                        <th>Customer ID</th>
                        <th>Description</th>
                        <th>Assigned To</th>
                        <th>Due Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model)
                    {
                        <tr>
                            <td>@task.Id</td>
                            <td>@task.CustomerId</td>
                            <td>@task.Description</td>
                            <td>@task.AssignedTo</td>
                            <td>@task.DueDate.ToString("yyyy-MM-dd")</td>
                            <td>@task.Status</td>
                            <td>
                                <a href="/customertasks/edit/@task.Id" class="btn btn-warning btn-sm">Edit</a>
                                <a href="/customertasks/delete/@task.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
