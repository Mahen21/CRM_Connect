@model CRMConnect.Models.CustomerTask

@{
    ViewData["Title"] = "Create Customer Task";
}

<h2>Create Customer Task</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label for="CustomerId" class="form-label">Customer ID</label>
        <input type="number" class="form-control" asp-for="CustomerId" required>
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" required maxlength="255">
    </div>
    <div class="mb-3">
        <label for="AssignedTo" class="form-label">Assigned To</label>
        <input type="text" class="form-control" asp-for="AssignedTo" required maxlength="100">
    </div>
    <div class="mb-3">
        <label for="DueDate" class="form-label">Due Date</label>
        <input type="date" class="form-control" asp-for="DueDate" required>
    </div>
    <div class="mb-3">
        <label for="Status" class="form-label">Status</label>
        <select class="form-control" asp-for="Status" required>
            <option value="Pending">Pending</option>
            <option value="Completed">Completed</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create Task</button>
</form>
